<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"

        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/battery"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battery"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Battery"
            android:textColor="@color/colorAccentorange"
             />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|top"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/onOffFlashlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="center"
            android:text="Turn On/Off Camera LED/ Flashlight Android"
            android:textAllCaps="false"
            android:textOff="Turn On"
            android:textOn="Turn Off" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/bulbss"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bulb2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccentred"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="anooppkrishnan96@gmail.com"
             />


    </LinearLayout>





</LinearLayout>